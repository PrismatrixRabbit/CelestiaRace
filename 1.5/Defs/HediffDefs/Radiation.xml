<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <HediffDef>
        <defName>CelesRadiation</defName>
        <hediffClass>HediffWithComps</hediffClass>
        <label>radiation exposure</label>
        <labelNoun>radiation induced nerve damage.</labelNoun>
        <description>Radiation exposure due to radioactive plasma.</description>
        <isBad>true</isBad>
        <maxSeverity>1</maxSeverity>
        <tendable>true</tendable>
        <comps>
            <li Class="HediffCompProperties_TendDuration">
                <labelTendedWell>have taken anti-radiation drugs</labelTendedWell>
                <labelTendedWellInner>have taken anti-radiation drugs</labelTendedWellInner>
                <labelSolidTendedWell>have taken anti-radiation drugs</labelSolidTendedWell>
                <severityPerDayTended>-0.25</severityPerDayTended>
            </li>
        </comps>
        <stages>
            <li>
                <minSeverity>0.1</minSeverity>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <postFactor>0.9</postFactor>
                    </li>
                </capMods>
            </li>
            <li>
                <minSeverity>0.2</minSeverity>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <postFactor>0.8</postFactor>
                    </li>
                </capMods>
            </li>
            <li>
                <minSeverity>0.4</minSeverity>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <postFactor>0.5</postFactor>
                    </li>
                </capMods>
                <hediffGivers>
                    <li Class="HediffGiver_RandomDrugEffect">
                        <hediff>Burn</hediff>
                        <minSeverity>5</minSeverity>
                        <severityToMtbDaysCurve>
                            <points>
                                <li>(0.40, 0.5)</li>
                                <li>(0.65, 0.33)</li>
                            </points>
                        </severityToMtbDaysCurve>
                        <canAffectAnyLivePart>true</canAffectAnyLivePart>
                    </li>
                </hediffGivers>
            </li>
            <li>
                <minSeverity>0.65</minSeverity>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <postFactor>0.3</postFactor>
                    </li>
                </capMods>
                <hediffGivers>
                    <li Class="HediffGiver_RandomDrugEffect">
                        <hediff>Burn</hediff>
                        <minSeverity>8</minSeverity>
                        <severityToMtbDaysCurve>
                            <points>
                                <li>(0.65, 0.33)</li>
                                <li>(0.90, 0.25)</li>
                            </points>
                        </severityToMtbDaysCurve>
                        <canAffectAnyLivePart>true</canAffectAnyLivePart>
                    </li>
                </hediffGivers>
            </li>
            <li>
                <minSeverity>0.9</minSeverity>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <setMax>0.15</setMax>
                    </li>
                </capMods>
                <hediffGivers>
                    <li Class="HediffGiver_RandomDrugEffect">
                        <hediff>Burn</hediff>
                        <minSeverity>10</minSeverity>
                        <severityToMtbDaysCurve>
                            <points>
                                <li>(0.90, 0.25)</li>
                                <li>(1.00, 0.2)</li>
                            </points>
                        </severityToMtbDaysCurve>
                        <canAffectAnyLivePart>true</canAffectAnyLivePart>
                    </li>
                </hediffGivers>
            </li>
        </stages>
    </HediffDef>
</Defs>