    <HediffDef ParentName="Celes_NanoHediffBase">
        <defName>Celes_NanoImplanted_I</defName>
        <label>celestia nanomachine implant I</label>
        <description>.</description>
        <isBad>false</isBad>
        <initialSeverity>0.001</initialSeverity>
        <minSeverity>0</minSeverity>
        <maxSeverity>0.5</maxSeverity>
        <stages>
            <li>
                <label>minor</label>
                <minSeverity>0.001</minSeverity>
                <painOffset>0.1</painOffset>
                <capMods>
                    <li>
                        <capacity>Manipulation</capacity>
                        <offset>0.15</offset>
                    </li>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>0.15</offset>
                    </li>
                </capMods>
            </li>
            <li>
                <label>minor</label>
                <minSeverity>0.08</minSeverity>
                <painOffset>0.1</painOffset>
                <statOffsets>
                    <RestFallRateFactor>0.5</RestFallRateFactor>
                </statOffsets>
                <capMods>
                    <li>
                        <capacity>Manipulation</capacity>
                        <offset>0.3</offset>
                    </li>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>0.3</offset>
                    </li>
                    <li>
                        <capacity>Hearing</capacity>
                        <offset>0.2</offset>
                    </li>
                    <li>
                        <capacity>Sight</capacity>
                        <offset>0.2</offset>
                    </li>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>-0.1</offset>
                    </li>
                </capMods>
            </li>
        </stages>
        <comps>
            <li Class="HediffCompProperties_SeverityPerDay">
                <severityPerDay>0.16</severityPerDay>
            </li>
            <li Class="CelesFeature.Celes_HediffCompProperties_Jumper">
                <targetHediff>Celes_NanoImplanted_II</targetHediff>
            </li>
        </comps>
    </HediffDef>
    
    <HediffDef ParentName="Celes_NanoHediffBase">
        <defName>Celes_NanoImplanted_II</defName>
        <label>celestia nanomachine implant II</label>
        <description>stage II nanomachine implant</description>
        <isBad>true</isBad>
        <initialSeverity>0.5</initialSeverity>
        <minSeverity>0.5</minSeverity>
        <maxSeverity>0.9</maxSeverity>
        <stages>
            <li>
                <label>minor</label>
                <minSeverity>0.5</minSeverity>
                <painOffset>0.55</painOffset>
                <statOffsets>
                    <RestFallRateFactor>1</RestFallRateFactor>
                </statOffsets>
                <capMods>
                    <li>
                        <capacity>Manipulation</capacity>
                        <offset>0.65</offset>
                    </li>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>0.65</offset>
                    </li>
                    <li>
                        <capacity>Hearing</capacity>
                        <offset>0.3</offset>
                    </li>
                    <li>
                        <capacity>Sight</capacity>
                        <offset>0.3</offset>
                    </li>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>-0.15</offset>
                    </li>
                </capMods>
                <hediffGivers>
                    <li Class="HediffGiver_Random">
                        <hediff>Dementia</hediff>
                        <mtbDays>37</mtbDays>
                        <partsToAffect>
                            <li>Brain</li>
                        </partsToAffect>
                    </li>
                    <li Class="HediffGiver_Random">
                        <hediff>ChemicalDamageSevere</hediff>
                        <mtbDays>37</mtbDays>
                        <canAffectAnyLivePart>true</canAffectAnyLivePart>
                    </li>
                </hediffGivers>
            </li>
            <li>
                <label>minor</label>
                <minSeverity>0.805</minSeverity>
                <painOffset>0.80</painOffset>
                <statOffsets>
                    <RestFallRateFactor>1</RestFallRateFactor>
                </statOffsets>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <setMax>0.1</setMax>
                    </li>
                </capMods>
            </li>
        </stages>
        <comps>
            <li Class="HediffCompProperties_SeverityPerDay">
                <severityPerDay>0.5</severityPerDay>
            </li>
            <li Class="CelesFeature.Celes_HediffCompProperties_Jumper">
                <targetHediff>Celes_NanoImplanted_III</targetHediff>
            </li>
            <li Class="HediffCompProperties_Discoverable">
                <sendLetterWhenDiscovered>true</sendLetterWhenDiscovered>
            </li>
        </comps>
    </HediffDef>

    <HediffDef ParentName="Celes_NanoHediffBase">
