<?xml version="1.0" encoding="utf-8"?>
<Defs>
    
    <ThingDef ParentName="ResourceBase">
        <defName>Celes_NanoCrystallisedCorpse</defName>
        <label>Dust-Mech crystalline corpse</label>
        <description>For some reason, human corpses that have been almost completely transformed by Dust-Mech have initial state Dust-Mech on them that has crystallised and can be dismantled for recycling and to produce neutral amines as a by-product.</description>
        <tickerType>Normal</tickerType>
        <graphicData>
            <texPath>Celes/Item/Celes_NanoCrystallisedCorpse/Celes_NanoCrystallisedCorpse</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>1.0</drawSize>
        </graphicData>
        <stackLimit>1</stackLimit>
        <healthAffectsPrice>false</healthAffectsPrice>
        <intricate>true</intricate>
        <statBases>
            <MaxHitPoints>50</MaxHitPoints>
            <MarketValue>12</MarketValue>
            <Mass>0.05</Mass>
            <Flammability>0.2</Flammability>
        </statBases>
        <thingCategories>
            <li>CorpsesHumanlike</li>
        </thingCategories>
        <tradeability>None</tradeability>
    </ThingDef>

    <RecipeDef>
        <defName>ButcherCeles_NanoCrystallisedCorpse</defName>
        <label>ButcherCeles_NanoCrystallisedCorpse</label>
        <description>Disassembling the body, which has been almost completely transformed by Dust-Mech crystals, with some of the flesh and blood tissues that may still be active, is done with caution.</description>
        <descriptionHyperlinks>
            <ThingDef>Celes_NanoCrystallisedCorpse</ThingDef>
        </descriptionHyperlinks>
		<workAmount>300</workAmount>
		<jobString>dismantling Dust-Mech crystalline corpse</jobString>
		<effectWorking>Smelt</effectWorking>
		<soundWorking>Recipe_ButcherCorpseMechanoid</soundWorking>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
        <workSkill>Crafting</workSkill>
        <uiIconThing>Celes_NanoCrystallisedCorpse</uiIconThing>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>Celes_NanoCrystallisedCorpse</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <products>
            <CelesNanoMachine>15</CelesNanoMachine>
            <Neutroamine>50</Neutroamine>
        </products>
        <recipeUsers>
            <li>Celes_MultifunctionalTab</li>
            <li>TableMachining</li>
        </recipeUsers>
        <researchPrerequisites>
            <li>Celes_MainTech_II</li>
        </researchPrerequisites>
        <displayPriority>1</displayPriority>
    </RecipeDef>

