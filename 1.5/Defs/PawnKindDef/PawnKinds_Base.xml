        <startingHediffs>
            <li>
                <def>MechlinkImplant</def>
                <chance>1.0</chance>
                <severity>0.5</severity>
            </li>
            <li>
                <def>Celes_MechlinkRestriction</def>
                <chance>1.0</chance>
                <severity>0.5</severity>
            </li>
            <li>
                <def>Celes_DustMechRhythm_Standard</def>
                <chance>1.0</chance>
                <severity>0.5</severity>
            </li>
