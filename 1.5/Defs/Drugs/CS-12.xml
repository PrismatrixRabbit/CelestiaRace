<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <ThingDef ParentName="MakeableDrugBase">
        <defName>Celes_CS12M</defName>
        <label>CS-12 combat hemostat</label>
        <description>A synthetic chemical agent used to transiently inhibit the user's nociceptive nerves, activate the body's healing mechanisms, and inhibit bleeding through multiple pathways. Note that CS-12 achieves organic enhancement by overloading cellular activity, and its after-effects are somewhat lethal. \n\nThe risks of overdosing on CS-12 are so great that the synthetic formulas used by Celestia pioneers make it fundamentally difficult to synthesise high concentrations of CS-12. But even so, continuous injections of CS-12 still carry a not inconsiderable risk.</description>
        <descriptionHyperlinks>
            <HediffDef>CS12_High</HediffDef>
            <HediffDef>CS12_After</HediffDef>
        </descriptionHyperlinks>
        <graphicData>
            <texPath>Celes/Drugs/CS12</texPath>
            <graphicClass>Graphic_StackCount</graphicClass>
        </graphicData>
        <rotatable>false</rotatable>
        <statBases>
            <WorkToMake>320</WorkToMake>
            <MarketValue>40</MarketValue>
            <Mass>0.05</Mass>
        </statBases>
        <techLevel>Industrial</techLevel>
        <ingestible>
            <ingestSound>Ingest_Inject</ingestSound>
            <foodType>Processed</foodType>
            <baseIngestTicks>650</baseIngestTicks>
            <nurseable>true</nurseable>
            <drugCategory>Hard</drugCategory>
            <ingestHoldOffsetStanding>
                <northDefault>
                    <offset>(0.18,0,0)</offset>
                </northDefault>
            </ingestHoldOffsetStanding>
            <ingestCommandString>Inject {0}</ingestCommandString>
            <ingestReportString>Injecting {0}</ingestReportString>
            <useEatingSpeedStat>false</useEatingSpeedStat>
            <chairSearchRadius>0</chairSearchRadius>
            <outcomeDoers>
                <li Class="IngestionOutcomeDoer_GiveHediff">
                    <hediffDef>CS12_High</hediffDef>
                    <severity>0.5</severity>
                </li>
            </outcomeDoers>
        </ingestible>
        <recipeMaker>
            <researchPrerequisite>Celes_Bio_II</researchPrerequisite>
            <recipeUsers>
                <li>DrugLab</li>
            </recipeUsers>
            <soundWorking>Recipe_Drug</soundWorking>
        </recipeMaker>
        <costList>
            <Neutroamine>1</Neutroamine>
            <CelesBioGel>1</CelesBioGel>
            <MedicineHerbal>1</MedicineHerbal>
        </costList>
        <comps>
            <li Class="CompProperties_Drug">
                <isCombatEnhancingDrug>true</isCombatEnhancingDrug>
                <overdoseSeverityOffset>0.18~0.35</overdoseSeverityOffset>
            </li>
        </comps>
    </ThingDef>

    <HediffDef>
        <defName>CS12_High</defName>
        <hediffClass>Hediff_High</hediffClass>
        <label>CS-12 stimulant is taking effect.</label>
        <labelNoun>CS-12 effect</labelNoun>
        <description>The active ingredient of CS-12 is working to enhance various combat capabilities and provide sports doping effects.</description>
        <defaultLabelColor>(1 ,1 ,1)</defaultLabelColor>
        <scenarioCanAdd>true</scenarioCanAdd>
        <maxSeverity>1.0</maxSeverity>
        <isBad>false</isBad>
        <comps>
            <li Class="HediffCompProperties_SeverityPerDay">
                <severityPerDay>-4</severityPerDay>
                <showHoursToRecover>true</showHoursToRecover>
            </li>
        </comps>
        <stages>
            <li>
                <minSeverity>0.00</minSeverity>
                <label>Effect almost done</label>
                <hediffGivers>
                    <li Class="HediffGiver_Random">
                        <hediff>CS12_After</hediff>
                        <mtbDays>0.0001</mtbDays>
                    </li>
                </hediffGivers>
            </li>
            <li>
                <minSeverity>0.001</minSeverity>
                <label>Effecting.</label>
                <painFactor>0.5</painFactor>
                <totalBleedFactor>0.3</totalBleedFactor>
                <statFactors>
                    <InjuryHealingFactor>1.5</InjuryHealingFactor>
                </statFactors>
            </li>
            <li>
                <minSeverity>0.501</minSeverity>
                <label>Effecting.</label>
                <painFactor>0.2</painFactor>
                <totalBleedFactor>0</totalBleedFactor>
                <statFactors>
                    <InjuryHealingFactor>2.5</InjuryHealingFactor>
                </statFactors>
                <hediffGivers>
                    <li Class="HediffGiver_Random">
                        <hediff>HeartAttack</hediff>
                        <mtbDays>1</mtbDays>
                        <partsToAffect>
                            <li>Heart</li>
                        </partsToAffect>
                    </li>
                </hediffGivers>
            </li>
        </stages>
    </HediffDef>

    <HediffDef>
        <defName>CS12_After</defName>
        <label>CS-12 after effect</label>
        <labelNoun>a CS-12 after effect</labelNoun>
        <description>after effect of CS-12 causing fatigue and repair body causing hungry.</description>
        <defaultLabelColor>(0.8, 0.8, 0.35)</defaultLabelColor>
        <hediffClass>Hediff_High</hediffClass>
        <makesSickThought>true</makesSickThought>
        <lethalSeverity>1</lethalSeverity>
        <tendable>true</tendable>
        <isBad>true</isBad>
        <comps>
            <li Class="HediffCompProperties_SeverityPerDay">
                <severityPerDay>1</severityPerDay>
                <showHoursToRecover>true</showHoursToRecover>
            </li>
            <!--<li Class="HediffCompProperties_Disappears">
                <disappearsAfterTicks>30000~60000</disappearsAfterTicks>
            </li>-->
            <li Class="HediffCompProperties_TendDuration">
                <baseTendDurationHours>24</baseTendDurationHours>
                <severityPerDayTended>-0.4</severityPerDayTended>
            </li>
        </comps>
        <stages>
            <li>
                <vomitMtbDays>0.2</vomitMtbDays>
                <restFallFactor>2.5</restFallFactor>
                <hungerRateFactorOffset>1.5</hungerRateFactorOffset>
                <capMods>
                    <li>
                        <capacity>Sight</capacity>
                        <setMax>0.8</setMax>
                    </li>
                    <li>
                        <capacity>Breathing</capacity>
                        <offset>-0.1</offset>
                    </li>
                </capMods>
            </li>
            
            <li>
                <vomitMtbDays>0.3</vomitMtbDays>
                <minSeverity>0.70</minSeverity>
                <label>dangerous</label>
                <restFallFactor>2</restFallFactor>
                <hungerRateFactorOffset>1</hungerRateFactorOffset>
                <lifeThreatening>true</lifeThreatening>
                <painOffset>0.4</painOffset>
            </li>
        </stages>
    </HediffDef>
</Defs>