    <RecipeDef>
        <defName>Celes_MakeBiogel</defName><!-- 制作生物酶凝胶 --><!-- 暂未完成 -->
        <label>extractable bio-enzyme gel</label>
        <description>Extraction of an effective bio-enzyme gel from organic matter.</description>
        <uiIconThing>Celes_BioGel</uiIconThing>
        <jobString>Extracting bio-enzyme gel from organics.</jobString>
        <effectWorking>Cremate</effectWorking>
        <soundWorking>Recipe_Cremate</soundWorking>
        <workAmount>600</workAmount>
        <workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
        <allowMixingIngredients>true</allowMixingIngredients>
        <ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
        <workSkill>Medicine</workSkill>
        <recipeUsers>
            <li>DrugLab</li>
        </recipeUsers>
        <researchPrerequisites>
            <li>Celes_MainTech_I</li>
            <li>MedicineProduction</li>
        </researchPrerequisites>
        <ingredients>
            <li>
                <filter>
                    <customSummary>protein</customSummary>
                    <categories>
                        <li>MeatRaw</li>
                        <li>AnimalProductRaw</li>
                    </categories>
                </filter>
                <count>2</count>
            </li>
            <li>
                <filter>
                    <categories>
                        <li>Celes_NanoResourcesRaw</li>
                    </categories>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <categories>
                <li>MeatRaw</li>
                <li>AnimalProductRaw</li>
                <li>Celes_NanoResourcesRaw</li>
            </categories>
        </fixedIngredientFilter>
        <defaultIngredientFilter>
            <disallowedThingDefs>
                <li>Celes_RawCrystalOrchid</li>
            </disallowedThingDefs>
        </defaultIngredientFilter>
        <products>
            <Celes_BioGel>3</Celes_BioGel>
        </products>
    </RecipeDef>

