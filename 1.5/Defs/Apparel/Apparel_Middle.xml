		<techLevel>Industrial</techLevel>
        <graphicData>
            <texPath>Celes/Apparel/Middle/TacticalVest/TacticalVest</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>CutoutComplex</shaderType>
        </graphicData>
        <statBases>
            <Mass>4</Mass>
            <EquipDelay>5</EquipDelay>
            <MaxHitPoints>200</MaxHitPoints>
            <WorkToMake>9000</WorkToMake>
			<Flammability>0.4</Flammability>
			<ArmorRating_Sharp>1.00</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.35</ArmorRating_Blunt>
			<ArmorRating_Heat>0.2</ArmorRating_Heat>
			<Insulation_Cold>3</Insulation_Cold>
			<Insulation_Heat>0</Insulation_Heat>
        </statBases>
        <apparel>
            <layers>
                <li>Middle</li>
            </layers>
            <canBeDesiredForIdeo>false</canBeDesiredForIdeo>
            <useWornGraphicMask>true</useWornGraphicMask>
            <developmentalStageFilter>Adult</developmentalStageFilter>
            <bodyPartGroups>
				<li>Neck</li>
				<li>Torso</li>
				<li>Shoulders</li>
            </bodyPartGroups>
            <wornGraphicPath>Celes/Apparel/Middle/TacticalVest/TacticalVest</wornGraphicPath>
            <tags>
                <li>Celes_Middle</li>
                <li>Celes_Military</li>
            </tags>
        </apparel>
        <costList>
            <Steel>60</Steel>
            <Cloth>40</Cloth>
            <ComponentIndustrial>1</ComponentIndustrial>
        </costList>
        <recipeMaker>
            <researchPrerequisite>Celes_Apparel_III</researchPrerequisite>
            <recipeUsers>
                <li>Celes_MultifunctionalTab</li>
            </recipeUsers>
            <displayPriority>307</displayPriority>
        </recipeMaker>
        <thingCategories>
            <li>Celes_Apparel_Military</li>
        </thingCategories>
    </ThingDef>

