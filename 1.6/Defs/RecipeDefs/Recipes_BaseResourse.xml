        <descriptionHyperlinks>
            <ThingDef>Celes_RawCrystalOrchid</ThingDef>
            <ThingDef>CelesNanoMachine</ThingDef>
        </descriptionHyperlinks>
        <uiIconThing>CelesNanoMachine</uiIconThing>
        <jobString>extracting self-replicating crystals</jobString>
        <effectWorking>Cremate</effectWorking>
        <soundWorking>Recipe_Cremate</soundWorking>
        <workAmount>600</workAmount>
        <workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
        <workSkill>Medicine</workSkill>
        <recipeUsers>
            <li>Celes_MultifunctionalTabA</li>
            <li>TableMachining</li>
        </recipeUsers>
        <researchPrerequisites>
            <li>Celes_MainTech_II</li>
        </researchPrerequisites>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>Celes_RawCrystalOrchid</li>
                    </thingDefs>
                </filter>
                <count>3</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>Celes_RawCrystalOrchid</li>
            </thingDefs>
        </fixedIngredientFilter>
        <products>
            <CelesNanoMachine>2</CelesNanoMachine>
        </products>
    </RecipeDef>

    <RecipeDef>
        <defName>Make_CelesAlloy</defName>
        <label>reconstruct Chime Alloy</label>
        <description>Make_CelesAlloy</description>
        <jobString>reconstructing Chime Alloy</jobString>
        <workAmount>10000</workAmount>
        <effectWorking>Smelt</effectWorking>
        <soundWorking>Recipe_Smelt</soundWorking>
        <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
        <workSkill>Crafting</workSkill>
        <recipeUsers>
            <li>Celes_MultifunctionalTabA</li>
        </recipeUsers>
        <researchPrerequisites>
            <li>Celes_MainTech_II</li>
        </researchPrerequisites>
        <skillRequirements>
            <Crafting>3</Crafting>
            <Intellectual>5</Intellectual>
        </skillRequirements>
        <ingredients>
            <li>
                <filter>
                    <categories>
                        <li>Celes_NanoResourcesRaw</li>
                    </categories>
                </filter>
                <count>10</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>Steel</li>
                    </thingDefs>
                </filter>
                <count>60</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>Steel</li>
            </thingDefs>
            <categories>
                <li>Celes_NanoResourcesRaw</li>
            </categories>
        </fixedIngredientFilter>
        <products>
            <CelesAlloy>60</CelesAlloy>
        </products>
    </RecipeDef>
    
