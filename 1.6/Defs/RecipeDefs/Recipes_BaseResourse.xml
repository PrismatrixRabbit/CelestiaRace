<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <!-- ========== 基础资源 ========== -->

    <RecipeDef>
        <defName>Celes_MakeBiogel</defName><!-- 制作生物酶凝胶 --><!-- 暂未完成 -->
        <label>extractable bio-enzyme gel</label>
        <description>Extraction of an effective bio-enzyme gel from organic matter.</description>
        <uiIconThing>Celes_BioGel</uiIconThing>
        <jobString>Extracting bio-enzyme gel from organics.</jobString>
        <effectWorking>Cremate</effectWorking>
        <soundWorking>Recipe_Cremate</soundWorking>
        <workAmount>600</workAmount>
        <workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
        <allowMixingIngredients>true</allowMixingIngredients>
        <workSkill>Medicine</workSkill>
        <recipeUsers>
            <li>DrugLab</li>
        </recipeUsers>
        <researchPrerequisites>
            <li>Celes_Bio_I</li>
            <li>DrugProduction</li>
        </researchPrerequisites>
        <ingredients>
            <li>
                <filter>
                    <categories>
                        <li>MeatRaw</li>
                        <li>AnimalProductRaw</li>
                    </categories>
                </filter>
                <count>20</count>
            </li>
            <li>
                <filter>
                    <categories>
                        <li>Celes_NanoResourcesRaw</li>
                    </categories>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <categories>
                <li>MeatRaw</li>
                <li>AnimalProductRaw</li>
                <li>Celes_NanoResourcesRaw</li>
            </categories>
        </fixedIngredientFilter>
        <defaultIngredientFilter>
            <categories>
                <li>MeatRaw</li>
                <li>AnimalProductRaw</li>
                <li>Celes_NanoResourcesRaw</li>
            </categories>
            <disallowedCategories>
                <li>EggsFertilized</li>
            </disallowedCategories>
            <!-- <disallowedThingDefs>
                <li>Celes_RawCrystalOrchid</li>
            </disallowedThingDefs> -->
        </defaultIngredientFilter>
        <products>
            <Celes_BioGel>3</Celes_BioGel>
        </products>
    </RecipeDef>

    <RecipeDef>
        <defName>Celes_MakeNanoMachine</defName><!-- 提纯自复制晶体 --><!-- 暂未完成 -->
        <label>extractable self-replicating crystals</label>
