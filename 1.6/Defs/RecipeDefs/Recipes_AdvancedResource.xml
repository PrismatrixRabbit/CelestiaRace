<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <!-- ========== 高级资源 ========== -->

    <RecipeDef>
        <defName>Make_CelesAdvanceCloth</defName>
        <label>reorganise Dust-Mech Silk</label>
        <description>Using Dust-Mech to reorganise Rimworld's native materials into Dust-Mech Silk.</description>
        <jobString>reorganising Dust-Mech Silk</jobString>
        <workAmount>10000</workAmount>
        <effectWorking>Smelt</effectWorking>
        <soundWorking>Recipe_Smelt</soundWorking>
        <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
        <workSkill>Crafting</workSkill>
        <recipeUsers>
            <li>Celes_TailoringTab</li>
        </recipeUsers>
        <researchPrerequisite>Celes_MainTech_IV</researchPrerequisite>
        <skillRequirements>
            <Crafting>8</Crafting>
            <Intellectual>10</Intellectual>
        </skillRequirements>
        <ingredients>
            <li>
                <filter>
                    <categories>
                        <li>Celes_NanoResourcesRaw</li>
                    </categories>
                </filter>
                <count>20</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>Cloth</li>
                    </thingDefs>
                </filter>
                <count>20</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>Plasteel</li>
                    </thingDefs>
                </filter>
                <count>2</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>Plasteel</li>
                <li>Cloth</li>
            </thingDefs>
            <categories>
                <li>Celes_NanoResourcesRaw</li>
            </categories>
        </fixedIngredientFilter>
        <products>
            <CelesAdvanceCloth>20</CelesAdvanceCloth>
        </products>
    </RecipeDef>

    <RecipeDef>
        <defName>Make_Celes_SpaceWeapenComponent</defName>
        <label>make celestia high-tech component</label>
        <description>make celestia high-tech component.</description>
        <jobString>making celestia high-tech component</jobString>
        <workAmount>12000</workAmount>
        <effectWorking>Smelt</effectWorking>
        <soundWorking>Recipe_Smelt</soundWorking>
        <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
        <workSkill>Crafting</workSkill>
        <recipeUsers>
            <li>Celes_MultifunctionalTabA</li>
        </recipeUsers>
        <researchPrerequisite>Celes_Weapon_III</researchPrerequisite>
        <skillRequirements>
            <Crafting>8</Crafting>
            <Intellectual>10</Intellectual>
        </skillRequirements>
        <ingredients>
            <li>
                <filter>
                    <categories>
                        <li>Celes_NanoResourcesRaw</li>
                    </categories>
                </filter>
                <count>30</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>ComponentIndustrial</li>
                    </thingDefs>
                </filter>
                <count>2</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>Gold</li>
                    </thingDefs>
                </filter>
                <count>0.5</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>CelesAlloy</li>
                    </thingDefs>
                </filter>
                <count>20</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>Plasteel</li>
                <li>Gold</li>
                <li>ComponentIndustrial</li>
            </thingDefs>
            <categories>
                <li>Celes_NanoResourcesRaw</li>
            </categories>
        </fixedIngredientFilter>
        <products>
            <Celes_SpaceWeapenComponent>1</Celes_SpaceWeapenComponent>
        </products>
    </RecipeDef>

